{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["dom", "es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "include": [
    "packages/examples/*",
    "packages/hooks/**/*",
    "packages/ipfsgalacfetchclient/*",
    "packages/utils/**/*"
  ],
  "exclude": ["node_modules", "dist", "tests"]
}
