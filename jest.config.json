{
  "testRegex": ".*\\.spec\\.ts",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "modulePathIgnorePatterns": ["node_modules", "dist", ".cache"],
  "rootDir": ".",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/setup-jest.ts"],
  "moduleNameMapper": {
    "^@galacfetch/utils.general$": "<rootDir>/packages/utils/general",
    "^@galacfetch/indexdb$": "<rootDir>/packages/hooks/indexdb",
    "^@galacfetch/ipfs-client$": "<rootDir>/packages/hooks/ipfs-client",
    "^@galacfetch/local-ipfs-file-manager$": "<rootDir>/packages/hooks/local-ipfs-file-manager",
    "^@galacfetch/remote-ipfs-file-manager$": "<rootDir>/packages/hooks/remote-ipfs-file-manager",
    "^@galacfetch/remote-ipfs-file-integrity$": "<rootDir>/packages/hooks/remote-ipfs-file-integrity",
    "^ipfsgalacfetchclient$": "<rootDir>/packages/ipfsgalacfetchclient",
    "^@galacfetch/secure-connect-manager$": "<rootDir>/packages/hooks/secure-connect-manager",
    "^@galacfetch/web-rtc-local-share$": "<rootDir>/packages/hooks/web-rtc-local-share"
  }
}
