{
  "testRegex": ".*\\.spec\\.ts",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "modulePathIgnorePatterns": ["node_modules", "dist", ".cache"],
  "rootDir": ".",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/setup-jest.ts"],
  "moduleNameMapper": {
    "^@intershare/utils.general$": "<rootDir>/galacfetch/utils/general",
    "^@intershare/hooks.indexdb$": "<rootDir>/galacfetch/hooks/indexdb",
    "^@intershare/hooks.ipfs-client$": "<rootDir>/galacfetch/hooks/ipfs-client",
    "^@intershare/hooks.local-ipfs-file-manager$": "<rootDir>/galacfetch/hooks/local-ipfs-file-manager",
    "^@intershare/hooks.remote-ipfs-file-manager$": "<rootDir>/galacfetch/hooks/remote-ipfs-file-manager",
    "^@intershare/hooks.remote-ipfs-file-integrity$": "<rootDir>/galacfetch/hooks/remote-ipfs-file-integrity"
  }
}
